@define-color background #282C34;
@define-color foreground #ABB2BF;
/*  @define-color cursorColor #526eff; */
@define-color cursorColor #A3BE8C;
@define-color color0 #5C6370;
@define-color color1 #E06C75;
@define-color color2 #98C379;
@define-color color3 #E5C07B;
@define-color color4 #61AFEF;
@define-color color5 #C678DD;
@define-color color6 #56B6C2;
@define-color color7 #ABB2BF;
@define-color color8 #4B5263;
@define-color color9 #BE5046;
@define-color color10 #98C379;
@define-color color11 #D19A66;
@define-color color12 #61AFEF;
@define-color color13 #C678DD;
@define-color color14 #56B6C2;
@define-color color15 #ABB2BF;

* {
    border: none;
    border-radius: 0;
    /* `otf-font-awesome` is required to be installed for icons */
    font-family: JetBrainsMonoMedium Nerd Font, Material Design Icons;
    font-size: 16px;
    min-height: 0;
}

window#waybar {
    background-color: transparent;
    border-bottom: 0px solid rgba(100, 114, 125, 0.5);
    color: @foreground;
    transition-property: background-color;
    transition-duration: .5s;
}

window#waybar.hidden {
    opacity: 0.2;
}

#workspaces {
    margin: 3px;
    background-color: @background;
    border-radius: 10px 10px 10px 10px;
    padding: 0 2px;
}

#workspaces button {
    padding: 0 0 0 0;
    margin: 0px 0px 0px 0px;
    min-width: 0;
    background-color: transparent;
    color: @foreground;
}


#workspaces button:hover {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 10px;
}

#workspaces button.focused {
    color: @cursorColor;
    padding: 0 0px;
    margin: 0px;
    border-radius: 10px;
}

#workspaces button.persistent {
    color: @foreground;
    padding: 0 0px;
    margin: 0px;
    border-radius: 10px;
}

#workspaces button.urgent {
    background-color: #eb4d4b;
}

#workspaces.focus button.focused {
    color: @background;
    padding: 2.8 3px;
    margin: 0px;
    border-radius: 10px;
    background-color: @cursorColor;
}

#mode {
    background-color: @background;
    color: @cursorColor;
    border-radius: 10px;
    margin: 3px 0 3px 0;
    padding: 0 5px;
}

#window {
    margin: 3px;
    padding: 0 10px;
    background-color: @background;
    color: @foreground;
    border-radius: 10px 10px 10px 10px;
}

#clock {
    margin: 3px;
    padding: 0 10px;
    background-color: @background;
    color: @foreground;
    border-radius: 10px 10px 10px 10px;
}

#pulseaudio, #battery, #network, #cpu, #memory, #temperature {
    padding: 0 10px;
    margin: 3px 0px 3px 0px;
    background-color: @background;
    color: @foreground;
}

#pulseaudio {
    border-radius: 10px 0px 0px 10px;
}

#temperature {
	border-radius: 0px 10px 10px 0px;
	margin: 3px 3px 3px 0px;
}

#network {
    border-radius: 0px 10px 10px 0px;
    margin: 3px 3px 3px 0;
}


#battery.charging {
    color: @color2;
}

@keyframes blink {
    to {
        background-color: #ffffff;
        color: #000000;
    }
}

#battery.critical:not(.charging) {
    color: @color4;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

label:focus {
    background-color: #000000;
}

#network.disconnected {
    color: @color1;
}

#pulseaudio.muted {
    color: @color0;
}
