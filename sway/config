### Main configuration file

# Keybidings
include ~/.config/sway/keybindings

# Input
include ~/.config/sway/input

# Colorscheme
include ~/.config/sway/colorschemes/green

# Set a wallpaper
include ~/.config/sway/wallpaper

# Start a bar
include ~/.config/sway/waybar

# systemd thingy (do not touch)
include /etc/sway/config.d/*
